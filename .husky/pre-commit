GREEN='\033[0;32m';
LIGHT_BLUE='\033[1;34m';
NO_COLOR='\033[0m';

tput setaf 1; echo "${LIGHT_BLUE}!${NO_COLOR} Formatter is Formatting Staged Files"; tput sgr0;
pnpm lint-staged

tput setaf 1; echo "${GREEN} Staged Linted${NO_COLOR}"; tput sgr0;
tput setaf 1; echo "${GREEN}✔${NO_COLOR} Done Running Lint-staged"; tput sgr0;

tput setaf 1; echo "${GREEN}✔${NO_COLOR} Done Running Pre-commit\n"; tput sgr0;
