{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "assists": {
    "actions": {
      "source": {
        "sortJsxProps": "on",
        "useSortedKeys": "on"
      }
    },
    "ignore": ["**/node_modules/**/*", "**/.next/**/*", "*.config.ts"]
  },
  "formatter": {
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "enabled": true,
    "formatWithErrors": true,
    "ignore": ["**/node_modules/**/*", "**/.next/**/*", "*.config.ts"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/node_modules/**/*", "**/.next/**/*", "*.config.ts"],
    "rules": {
      "a11y": {
        "all": true
      },
      "all": true,
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true,
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "nursery": {
        "all": true,
        "noProcessEnv": "off",
        "noSecrets": "off",
        "useComponentExportOnlyModules": "off",
        "useExplicitType": "off"
      },
      "performance": {
        "all": true
      },
      "security": {
        "all": true
      },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "useNamingConvention": "off"
      },
      "suspicious": {
        "all": true,
        "noReactSpecificProps": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
