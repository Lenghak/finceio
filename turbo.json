{
  "$schema": "https://turbo.build/schema.json",
  "daemon": true,
  "envMode": "strict",
  "tasks": {
    "@backend/client#build": {
      "outputs": ["dist/**"]
    },
    "@frontend/web#build": {
      "env": ["AUTH_URL", "AUTH_SECRET", "SKIP_ENV_VALIDATION"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "persistent": true
    }
  }
}
