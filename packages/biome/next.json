{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "extends": ["./base.json"],
  "overrides": [
    {
      "javascript": {
        "formatter": {
          "jsxQuoteStyle": "double",
          "quoteProperties": "asNeeded",
          "semicolons": "always",
          "arrowParentheses": "always",
          "bracketSameLine": false,
          "quoteStyle": "double",
          "bracketSpacing": true
        }
      },
      "ignore": ["**/node_modules/**/*", ".next", ".turbo"]
    }
  ]
}
