{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,

    "composite": true,

    "declaration": true,

    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    "lib": ["ES2022"],
    "module": "ES2022",

    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "sourceMap": true,

    "strict": true,
    "target": "ES2022",
    "types": ["node"]
  }
}
