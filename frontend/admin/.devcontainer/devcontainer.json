// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "admin.persistio.ai",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {}
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "YoavBls.pretty-ts-errors",
        "bradlc.vscode-tailwindcss",
        "million.million-lint"
      ],
      "settings": {
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript", // Enable .ts
          "typescriptreact" // Enable .tsx
        ]
      }
    }
  },
  "workspaceFolder": "/persistio/frontend/admin",
  "workspaceMount": "source=${localWorkspaceFolder},target=/persistio/frontend/admin,type=bind",
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/../../packages",
      "target": "/persistio/packages",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../.git",
      "target": "/persistio/.git",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../.changeset",
      "target": "/persistio/.changeset",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../.husky",
      "target": "/persistio/.husky",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../.nx",
      "target": "/persistio/.nx",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../.commitlintrc.mjs",
      "target": "/persistio/.commitlintrc.mjs",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../nx.json",
      "target": "/persistio/nx.json",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../package.json",
      "target": "/persistio/package.json",
      "type": "bind"
    },
    {
      "source": "${localWorkspaceFolder}/../../pnpm-workspace.yaml",
      "target": "/persistio/pnpm-workspace.yaml",
      "type": "bind"
    }
  ],
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root",
  "postCreateCommand": "git config --global --add safe.directory /persistio/"
}
