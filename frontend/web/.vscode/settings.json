{
  "biome.lspBin": "./../../node_modules/@biomejs/biome/bin/biome",
  "biome.searchInPath": false,
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.fixAll.biome": "always",
    "source.organizeImports.biome": "always"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "material-icon-theme.files.customClones": [
    // config files
    {
      "base": "lock",
      "color": "yellow-700",
      "fileExtensions": [".ts"],
      "fileNames": ["auth.config.ts"],
      "name": "auth-config"
    },
    {
      "base": "pipeline",
      "color": "silver",
      "fileExtensions": [".js", ".cjs", ".mjs", ".ts"],
      "fileNames": [".dependency-cruiser.cjs"],
      "name": "dependencies-cruiser"
    },
    {
      "base": "vscode",
      "color": "blue-400",
      "fileExtensions": ["*.json"],
      "fileNames": ["extensions.json", "settings.json"],
      "name": "vscode"
    }
  ],
  "material-icon-theme.folders.customClones": [
    // roles
    {
      "base": "admin",
      "color": "light-green-500",
      "folderNames": ["users"],
      "lightColor": "light-green-700",
      "name": "users-admin"
    },
    {
      "base": "admin",
      "color": "purple-400",
      "folderNames": ["roles"],
      "name": "roles-admin"
    },
    // modules
    {
      "base": "plugin",
      "color": "purple-400",
      "folderNames": ["feature", "features"],
      "name": "features-modules"
    },
    {
      "base": "functions",
      "color": "green-600",
      "folderNames": ["action", "actions"],
      "name": "server-actions"
    },
    {
      "base": "context",
      "color": "pink-400",
      "folderNames": ["providers", "provider"],
      "name": "providers"
    },
    // ui
    {
      "base": "custom",
      "color": "gray-900",
      "folderNames": ["shadcn", "shadcn-ui"],
      "lightColor": "gray-700",
      "name": "shadcn-ui"
    },
    {
      "base": "core",
      "color": "red-600",
      "folderNames": ["core", "core-ui"],
      "name": "core-ui"
    },
    {
      "base": "base",
      "color": "blue-700",
      "folderNames": ["plate", "plate-ui"],
      "name": "plate-ui"
    },
    {
      "base": "helper",
      "color": "yellow-900",
      "folderNames": ["magic", "magic-ui"],
      "name": "magic-ui"
    },
    {
      "base": "plugin",
      "color": "yellow-700",
      "folderNames": ["extension", "extension-ui"],
      "name": "extension-ui"
    }
  ]
}
